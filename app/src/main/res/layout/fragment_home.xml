<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFB300"
    tools:context=".fragment.HomeFragment">

    <ImageButton
        android:id="@+id/hamburgerImageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_hamburger"
        android:scaleType="centerCrop"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:layout_marginStart="4dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/navigation_drawer"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:id="@+id/homeStartButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="@string/start"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#5F2F00"
        android:background="@drawable/start_button"
        android:fontFamily="@font/start_font"
        style="?android:attr/borderlessButtonStyle"/>

    <TextView
        android:id="@+id/startTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/homeStartButton"
        android:layout_marginTop="3dp"
        android:text="@string/tap_to_start"
        android:textSize="15sp"
        android:textColor="#FFFFFF"/>

</RelativeLayout>